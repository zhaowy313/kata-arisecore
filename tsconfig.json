{
  "include": [
    "./src/index.ts",
    "./src/types.ts",
    "./src/sgf/**/*",
    "./src/kifu/**/*",
    "./src/game/**/*"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "isolatedModules": true,
    "noImplicitOverride": true
  }
}